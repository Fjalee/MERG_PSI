<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_UI.Views.HomePage"
             Shell.NavBarIsVisible="False">
<ContentPage.Content>
    
        <StackLayout BackgroundColor="White">
            <Frame
                    CornerRadius="30"
                    Padding="0"
                    Margin="30"
                    BackgroundColor="#E6E6E6"
                    HasShadow="True"
                    HeightRequest="50">
                    <StackLayout>
                        <SearchBar Placeholder="Kur ieškote buto?"
                        x:Name="municipality" TextChanged="MunicipalitySearchBar_OnTextChangedAsync"
                        HorizontalTextAlignment="Center"
                        CancelButtonColor="Black"
                        PlaceholderColor="DarkGray"
                        TextColor="DarkGray"
                        FontSize="Medium"
                        BackgroundColor="Transparent"/>
                        <Image Source="{}" />
                    </StackLayout>
                </Frame>

             <!--<Entry BackgroundColor="Transparent" TextColor="#E6E6E6" Placeholder="Savivaldybė" AbsoluteLayout.LayoutBounds="15,70,285,38" AbsoluteLayout.LayoutFlags="None" />-->
                        <ListView x:Name="municipalityListView" ItemsSource="{Binding _municipaliyList}" IsVisible="False" RefreshControlColor="Red" CachingStrategy="RecycleElement" BackgroundColor="Transparent" ItemTapped="MunicipalityListView_OnItemTapped" AbsoluteLayout.LayoutBounds="20,110,269,160" AbsoluteLayout.LayoutFlags="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout 
                                            HorizontalOptions="FillAndExpand"
                                            Margin="0"
                                            Padding="0"
                                            Spacing="0"
                                            VerticalOptions="Fill">
                                            <Label BackgroundColor="Transparent"
                                                FontSize="16"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Margin="0" 
                                                Text="{Binding}"
                                                TextColor="Red"  
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

            <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="buttonExpand" Text="Suskleisti" Clicked="Button_Clicked_Expand" HorizontalOptions="Fill"/>
            <Button Text="Eiti į žemėlapį" Clicked="Button_Clicked_GoToMapAsync" HorizontalOptions="FillAndExpand"/>
            <Button Text="Paieška" Clicked="Button_Clicked_SearchAsync" HorizontalOptions="Fill"/>
            </StackLayout>


            <StackLayout x:Name="filtersDisplay" IsVisible="false">
                <!--<StackLayout  Grid.Row="1" HorizontalOptions="StartAndExpand" VerticalOptions="Start" Margin="10" >
                <Label Text="Nekilnojamasis turtas" TextColor="DarkGray" FontSize="20" FontAttributes="Bold"/>  
                </StackLayout>-->

            <StackLayout Margin="0,0,0,0">
                    <StackLayout>
                        <!--<ListView x:Name="municipalityListView" ItemsSource="{Binding _municipaliyList}" IsVisible="False" RefreshControlColor="#E6E6E6" CachingStrategy="RecycleElement" BackgroundColor="Transparent" ItemTapped="MunicipalityListView_OnItemTapped" AbsoluteLayout.LayoutBounds="20,110,269,160" AbsoluteLayout.LayoutFlags="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout 
                                            HorizontalOptions="FillAndExpand"
                                            Margin="0"
                                            Padding="0"
                                            Spacing="0"
                                            VerticalOptions="Fill">
                                            <Label BackgroundColor="Transparent"
                                                FontSize="16"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Left"
                                                Margin="0" 
                                                Text="{Binding}"
                                                TextColor="#E6E6E6"  
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>-->
                        
                        <Entry x:Name="microdistrict" TextChanged="MicrodistrictSearchBar_OnTextChangedAsync" BackgroundColor="Transparent" TextColor="#E6E6E6" Placeholder="Gyvenvietė" AbsoluteLayout.LayoutBounds="15,70,285,38" AbsoluteLayout.LayoutFlags="None" />
                        <ListView x:Name="microdistrictListView" ItemsSource="{Binding _microdistrictList}" IsVisible="False" RefreshControlColor="#E6E6E6" CachingStrategy="RecycleElement" BackgroundColor="Transparent" ItemTapped="MicrodistrictListView_OnItemTapped" AbsoluteLayout.LayoutBounds="20,110,269,160" AbsoluteLayout.LayoutFlags="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout 
                                            HorizontalOptions="FillAndExpand"
                                            Margin="0"
                                            Padding="0"
                                            Spacing="0"
                                            VerticalOptions="Fill">
                                            <Label BackgroundColor="Transparent"
                                                FontSize="16"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Left"
                                                Margin="0" 
                                                Text="{Binding}"
                                                TextColor="#E6E6E6"  
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <Entry x:Name="street" TextChanged="StreetSearchBar_OnTextChangedAsync" BackgroundColor="Transparent" TextColor="#E6E6E6" Placeholder="Gatvė" AbsoluteLayout.LayoutBounds="15,70,285,38" AbsoluteLayout.LayoutFlags="None" />
                        <ListView x:Name="streetListView" ItemsSource="{Binding _streetList}" IsVisible="False" RefreshControlColor="#E6E6E6" CachingStrategy="RecycleElement" BackgroundColor="Transparent" ItemTapped="StreetListView_OnItemTapped" AbsoluteLayout.LayoutBounds="20,110,269,160" AbsoluteLayout.LayoutFlags="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout 
                                            HorizontalOptions="FillAndExpand"
                                            Margin="0"
                                            Padding="0"
                                            Spacing="0"
                                            VerticalOptions="Fill">
                                            <Label BackgroundColor="Transparent"
                                                FontSize="16"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Left"
                                                Margin="0" 
                                                Text="{Binding}"
                                                TextColor="#E6E6E6"  
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>

                <StackLayout Grid.Row="1" Orientation="Horizontal">
                    <Entry x:Name="priceFrom" Placeholder="Kaina nuo" Keyboard="Numeric" HorizontalOptions="FillAndExpand"/>
                    <Entry x:Name="priceTo" Placeholder="Kaina iki" Keyboard="Numeric" HorizontalOptions="Fill" WidthRequest="200" />
                </StackLayout>

                <StackLayout Grid.Row="1" Orientation="Horizontal">
                    <Entry x:Name="areaFrom" Placeholder="Plotas nuo" Keyboard="Numeric" HorizontalOptions="FillAndExpand"/>
                    <Entry x:Name="areaTo" Placeholder="Plotas iki" Keyboard="Numeric" HorizontalOptions="Fill" WidthRequest="200" />
                </StackLayout>

                <StackLayout Grid.Row="1" Orientation="Horizontal">
                    <Entry x:Name="pricePerSqMFrom" Placeholder="Kv. metro kaina nuo" Keyboard="Numeric" HorizontalOptions="FillAndExpand"/>
                    <Entry x:Name="pricePerSqMTo" Placeholder="Kv. metro kaina iki" Keyboard="Numeric" HorizontalOptions="Fill" WidthRequest="200" />
                </StackLayout>

                <StackLayout Grid.Row="1" Orientation="Horizontal">
                    <Entry x:Name="buildYearFrom" Placeholder="Pastatymo m nuo" Keyboard="Numeric" HorizontalOptions="Fill" WidthRequest="200"/>
                    <Entry x:Name="buildYearTo" Placeholder="Pastatymo m iki" Keyboard="Numeric" HorizontalOptions="Fill"  />
                    <CheckBox x:Name="noInfoBuildYear"/>
                </StackLayout>

                <StackLayout Grid.Row="1" Orientation="Horizontal">
                    <Entry x:Name="numberOfRoomsFrom" Placeholder="Kambarių sk. nuo" Keyboard="Numeric" HorizontalOptions="Fill" WidthRequest="200"/>
                    <Entry x:Name="numberOfRoomsTo" Placeholder="Kambarių sk. iki" Keyboard="Numeric" HorizontalOptions="Fill" />
                    <CheckBox x:Name="noInfoRoomNumber"/>
                </StackLayout>

            </StackLayout>
            </StackLayout>

            <CollectionView x:Name="myItem" SelectionMode="Single" SelectionChanged="MyItem_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Margin="30,-60,0,30" Padding="0" BackgroundColor="white">
                            <Grid>
                                <Frame BackgroundColor="#E6E6E6" HasShadow="True" Margin="30" HeightRequest="60" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                                    <StackLayout Margin="0,0,0,0" Padding="0">
                                        <Label Text="{Binding Municipality}" Margin="175,-5,0,0" TextColor="Black" FontSize="14" HorizontalTextAlignment="Start"/>
                                        <Label Text="{Binding Microdistrict}" Margin="175,-10,0,0" TextColor="Black" FontSize="14" HorizontalTextAlignment="Start"/>
                                        <!--<Label Text="{Binding Street}" Margin="175,-10,-10,0" TextColor="BLack" FontSize="14"/>
                                        Label Text="{Binding Price}" Margin="175,-10,-10,0" TextColor="BLack" FontSize="14"/>-->
                             </StackLayout>
                                </Frame>
                                <StackLayout>
                                    <Frame BackgroundColor="Orange" HasShadow="True" Margin="30,0,0,0" HeightRequest="100" WidthRequest="190" Padding="0"
                                           VerticalOptions="CenterAndExpand" HorizontalOptions="Start">
                                        <Image Source="{Binding Image}" Aspect="AspectFill"/>
                                    </Frame>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>